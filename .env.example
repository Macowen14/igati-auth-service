# Server Configuration
PORT=4000
APP_URL=http://localhost:4000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/authdb

# Redis (for BullMQ job queue)
REDIS_URL=redis://localhost:6379

# Email Service (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@example.com

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# Token Hashing (for email verification tokens)
TOKEN_HASH_SECRET=your-token-hash-secret-change-this-in-production

# Cookie Configuration
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/oauth/google/callback

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:4000/api/auth/oauth/github/callback

# Logging
LOG_LEVEL=debug

# Auth Configuration
ALLOW_UNVERIFIED_LOGIN=false
EMAIL_TOKEN_EXPIRY_HOURS=24
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5
